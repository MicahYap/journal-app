<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Category</th>
      <th>Task</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.date %></td>
        <td><%= task.category.name %></td>
        <td><%= task.task %></td>
      </tr>
    <% end %>
  </tbody>

</table>

